{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@driver/*": ["src/*"],
      "@common/*": ["../../packages/common/*"],
      "@admin/*": ["../admin/src/*"],
      "@warehouse/*": ["../warehouse/src/*"],
      "@salesperson/*": ["../salesperson/src/*"],
      "@pos/*": ["../pos/src/*"]
    },
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": false
  },
  "include": [
    "src",
    "prisma",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
